<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<f:Form editable="true" id="investmentForm" width="100%">
		<f:layout>
			<f:ResponsiveGridLayout labelSpanXL="4" labelSpanL="3" labelSpanM="4" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="4"
				emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="1" columnsM="1" singleContainerFullSize="false"/>
		</f:layout>
		<f:formContainers>
			<f:FormContainer title="{i18n>tableA}">
				<f:formElements>
					<f:FormElement label="{i18n>totalA}">
						<f:fields>
							<Input width="50%" id="totalA_inp" value="{/totalA}"/>
						</f:fields>
					</f:FormElement>
				</f:formElements>
			</f:FormContainer>
			<f:FormContainer title="{i18n>tableB}">
				<f:formElements>
					<f:FormElement label="{i18n>totalB}">
						<f:fields>
							<Input width="50%" id="totalB_inp" value="{/totalB}"/>
						</f:fields>
					</f:FormElement>
				</f:formElements>
			</f:FormContainer>
			<f:FormContainer title="{i18n>tableC}">
				<f:formElements>
					<f:FormElement label="{i18n>tableC_1}">
						<f:fields>
							<TextArea id="tableC_1" value="{/tableC_1}" growing="true" width="100%"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label=" {i18n>tableC_2}">
						<f:fields>
							<TextArea id="tableC_2" value="{/tableC_2}" growing="true" width="100%"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>tableC_3}">
						<f:fields>
							<TextArea id="tableC_3" value="{/tableC_3}" growing="true" width="100%"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>tableC_4}">
						<f:fields>
							<TextArea id="tableC_4" value="{/tableC_4}" growing="true" width="100%"/>
						</f:fields>
					</f:FormElement>
				</f:formElements>
			</f:FormContainer>
			<f:FormContainer>
				<f:formElements>
					<f:FormElement>
						<f:fields>
							<FormattedText htmlText="{i18n>invText}" width="100%"/>
						</f:fields>
					</f:FormElement>
				</f:formElements>
			</f:FormContainer>
			<f:FormContainer title="{i18n>claim}">
				<f:formElements>
					<f:FormElement>
						<f:fields>
							<VBox>
								<FormattedText htmlText="{i18n>claimText3}" width="100%"/>
								<RadioButtonGroup class="sapUiMediumMarginBottom" id="grp">
									<buttons>
										<RadioButton text="{i18n>yes}" selected="{/claimYes}" groupName="gr"/>
										<RadioButton text="{i18n>no}" selected="{/claimNo}" groupName="gr"/>
									</buttons>
								</RadioButtonGroup>
							</VBox>
						</f:fields>
					</f:FormElement>
				</f:formElements>
			</f:FormContainer>
			<f:FormContainer title="{i18n>claimAlso}">
				<f:formElements>
					<f:FormElement>
						<f:fields>
							<FormattedText htmlText="{i18n>claimAlsoText}" width="100%"/>
						</f:fields>
					</f:FormElement>
				</f:formElements>
			</f:FormContainer>
			<f:FormContainer title="{i18n>privacy}">
				<f:formElements>
					<f:FormElement>
						<f:fields>
							<FormattedText htmlText="{i18n>privacyText}" width="100%"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>date}">
						<f:fields>
							<Input width="50%" id="luogo" value="{/luogo}"/>
							<Input width="50%" id="data" value="{/data}"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>signature}">
						<f:fields>
							<Input width="50%" id="signature" value="{/signature}"/>
						</f:fields>
					</f:FormElement>
				</f:formElements>
			</f:FormContainer>
		</f:formContainers>
	</f:Form>
</core:FragmentDefinition>